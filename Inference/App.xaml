<Application x:Class="Inference.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Inference"
             StartupUri="View/HomeScreen.xaml">
    <Application.Resources>

        <SolidColorBrush x:Key="listboxItemBackground" Color="DodgerBlue"/>
        <SolidColorBrush x:Key="listboxItemForeground" Color="White"/>
        <SolidColorBrush x:Key="listboxBackground" Color="LightGray"/>

        <Style TargetType="Grid" x:Key="homeScreenColor">
            <Setter Property="Background" Value="Black"/>
        </Style>
        
        <Style TargetType="Label" x:Key="homeTitleTextStyle">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Grid.ColumnSpan" Value="2"/>
        </Style>

        <Style TargetType="Button" x:Key="listboxitemStyle">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Background" Value="{StaticResource listboxItemBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource listboxItemForeground}"/>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="{StaticResource listboxBackground}"/>
        </Style>

        <BitmapImage x:Key="AccountImageSource" UriSource="C:\Users\jrdnh\Documents\Visual Studio 2017\Projects\Inference\Inference\Images\account.png"/>
        <BitmapImage x:Key="ProjectImageSource" UriSource="C:\Users\jrdnh\Documents\Visual Studio 2017\Projects\Inference\Inference\Images\project.png"/>
        <BitmapImage x:Key="ExploreImageSource" UriSource="C:\Users\jrdnh\Documents\Visual Studio 2017\Projects\Inference\Inference\Images\compass.png"/>
        

    </Application.Resources>
</Application>
