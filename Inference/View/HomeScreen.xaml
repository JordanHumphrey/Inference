<Window x:Class="Inference.View.HomeScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Inference.View"
        mc:Ignorable="d"
        Title="HomeScreen" Height="450" Width="800">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label x:Name="titleLabel" Content="Inference"
               Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="2"
               HorizontalAlignment="Center" VerticalAlignment="Bottom"
               Style="{StaticResource homeTitleTextStyle}"/>

        <Grid Grid.Column="1" Grid.Row="3" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button x:Name="accountsButton" Grid.ColumnSpan="2" Grid.RowSpan="2" Background="Black"/>
            <TextBlock Text="Accounts" Grid.Row="0" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Left"
                       FontWeight="DemiBold" Foreground="White"/>
            <TextBlock Text="Create, Edit or Remove Accounts" Grid.Row="1" Grid.Column="1" VerticalAlignment="Top"
                       TextWrapping="Wrap" Padding="2" Foreground="White" FontSize="10"/>
            <Image Source="{StaticResource AccountImageSource}" Height="60" Width="60" Grid.RowSpan="2"/>
        </Grid>

        <Grid Grid.Column="5" Grid.Row="3" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button x:Name="exploreButton" Grid.ColumnSpan="2" Grid.RowSpan="2" Background="Black"/>
            <TextBlock Text="Explore Database" Grid.Row="0" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Left"
                       FontWeight="DemiBold" Foreground="White"/>
            <TextBlock Text="Create, Edit or Remove Database" Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" FontSize="10"
                       TextWrapping="Wrap" Padding="2" Foreground="White"/>
            <Image Source="{StaticResource AccountImageSource}" Height="60" Width="60" Grid.RowSpan="2"/>
        </Grid>

        
        
    </Grid>
</Window>
