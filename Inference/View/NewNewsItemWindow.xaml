<Window x:Class="Inference.View.NewNewsItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Inference.View"
        mc:Ignorable="d"
        Title="News" Height="135" Width="600" Background="#000044">
    <StackPanel>
        <TextBox x:Name="NewsNameEntry" Text="Your Name" FontSize="18" Margin="5" FontStyle="Italic" FontWeight="Light" Foreground="WhiteSmoke" Background="#000033" BorderThickness="1" BorderBrush="WhiteSmoke"/>
        <TextBox x:Name="NewsContentEntry" Text="What News Do You Bring?" FontSize="18" Margin="5" FontStyle="Italic" FontWeight="Light" Foreground="WhiteSmoke" Background="#000033" BorderThickness="1" BorderBrush="WhiteSmoke"/>
        <Button x:Name="AddNewsButton" Click="AddNewsButton_Click" Content="Submit News" Style="{StaticResource buttonStyle}" Margin="5" BorderBrush="WhiteSmoke" BorderThickness="1"/>
    </StackPanel>
</Window>
