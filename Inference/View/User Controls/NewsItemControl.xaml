<UserControl x:Class="Inference.View.User_Controls.NewsItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Inference.View.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="395" HorizontalAlignment="Stretch">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="104*"/>
            <ColumnDefinition Width="291*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="NewsNameTextBlock" Text="Jordan H" Grid.Column="0" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="DarkGray"/>
        <TextBlock x:Name="NewsItemTextBlock" Text="This is a test of the first news item" FontWeight="Bold" Grid.Column="1" FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0" Foreground="DarkGray"/>

    </Grid>
</UserControl>
